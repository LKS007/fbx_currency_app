<div class="row text-center fb__history_row">
  <p>Force History</p>    
  <div class="history_table">
    <% if @currency_history.nil? %>
      NOTHING
    <% else %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col">ID</th><th class="col">Rate</th><th class="col">Date To</th><th></th>
        </tr>
      </thead>
      <tbody>
        <% @currency_history.each do |story| %>
          <tr class="table-success">
            <td><%= story.id %></td>
            <td><%= number_to_currency(story.rate, unit: "") %></td>
            <td><%= story.date_to.strftime('%Y-%m-%d %H:%M') %></td>
            <td>
              <%= link_to  remove_exchange_rate_path(story), method: :delete, id: story.id  do %>
              
                Delete
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>
